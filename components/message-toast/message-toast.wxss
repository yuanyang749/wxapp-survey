/* 消息提示组件样式 */

.message-toast-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  pointer-events: none;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.message-toast {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  max-width: 600rpx;
  min-width: 200rpx;
  pointer-events: auto;
  word-break: break-all;
}

/* 位置样式 */
.message-toast-top {
  margin-top: 100rpx;
}

.message-toast-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin: 0;
}

.message-toast-bottom {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  margin: 0;
}

/* 类型样式 */
.message-toast-success {
  background-color: rgba(82, 196, 26, 0.95);
  color: #fff;
}

.message-toast-error {
  background-color: rgba(255, 71, 87, 0.95);
  color: #fff;
}

.message-toast-warning {
  background-color: rgba(255, 167, 38, 0.95);
  color: #fff;
}

.message-toast-info {
  background-color: rgba(24, 144, 255, 0.95);
  color: #fff;
}

/* 图标样式 */
.message-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

/* 文本样式 */
.message-text {
  font-size: 28rpx;
  line-height: 1.4;
  flex: 1;
}

/* 关闭按钮样式 */
.message-close {
  margin-left: 16rpx;
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  transition: background-color 0.2s ease;
}

.message-close:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.close-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .message-toast {
    padding: 20rpx 28rpx;
    max-width: 500rpx;
    margin: 0 20rpx;
  }
  
  .message-icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
  }
  
  .message-text {
    font-size: 26rpx;
  }
  
  .close-icon {
    width: 18rpx;
    height: 18rpx;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .message-toast {
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .message-toast-success {
    background-color: rgba(82, 196, 26, 0.9);
  }
  
  .message-toast-error {
    background-color: rgba(255, 71, 87, 0.9);
  }
  
  .message-toast-warning {
    background-color: rgba(255, 167, 38, 0.9);
  }
  
  .message-toast-info {
    background-color: rgba(24, 144, 255, 0.9);
  }
}
