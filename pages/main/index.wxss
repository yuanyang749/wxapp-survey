/* pages/main/index.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #5f1971;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 30rpx;
  height: 30rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 骨架屏样式 */
.skeleton-wrapper {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.banner-skeleton {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-banner {
  width: 100%;
  height: 300rpx;
  background-color: #f2f2f2;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

.skeleton-banner::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.6),
    transparent
  );
  animation: skeleton-loading 1.5s infinite;
}

@keyframes skeleton-loading {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}


/* 投票列表 */
.survey-list {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.survey-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
  width: 48%;
}

.survey-card:active {
  transform: scale(0.98);
}

.survey-cover {
  position: relative;
  width: 100%;
  height: 300rpx;
  background-color: #f0f0f0;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.featured-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(237, 85, 101, 0.9);
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.access-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 8rpx;
  border-radius: 50%;
  z-index: 10;
}

.lock-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 标题覆盖层 */
.title-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 20rpx 20rpx;
}

.title-overlay .survey-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.4;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
}

.survey-info {
  padding: 16rpx 20rpx;
}

.creator-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.creator-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.creator-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  width: 20rpx;
  height: 20rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #666;
}

.create-time {
  font-size: 20rpx;
  color: #999;
}

/* 空状态 */
.empty-state-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
