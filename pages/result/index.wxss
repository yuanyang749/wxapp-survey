/* 投票结果页面样式 */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #5f1971;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 错误提示 */
.error-toast {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #ff4757;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  z-index: 1000;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

.error-text {
  font-size: 28rpx;
}
/* 投票头部 */
.survey-header {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.survey-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.survey-meta {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.survey-type {
  background-color: #5f1971;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.survey-status {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ddd;
}

.survey-status.active {
  color: #52c41a;
  border-color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.survey-desc {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.survey-cover {
  margin-bottom: 30rpx;
}

.cover-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.survey-stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #5f1971;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 选项容器 */
.options-container {
  margin: 20rpx;
}

/* 投票区域 */
.voting-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.options-list {
  margin-bottom: 40rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.option-item.selected {
  border-color: #5f1971;
  background-color: rgba(95, 25, 113, 0.05);
}

.option-indicator {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.radio-indicator {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  position: relative;
}

.radio-indicator.checked {
  border-color: #5f1971;
}

.radio-indicator.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #5f1971;
  border-radius: 50%;
}

.checkbox-indicator {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-indicator.checked {
  border-color: #5f1971;
  background-color: #5f1971;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
}

.option-content {
  flex: 1;
}

.option-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

/* 提交区域 */
.submit-section {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #5f1971, #7b2d8e);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 30rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(95, 25, 113, 0.3);
  transition: all 0.3s ease;
}

.submit-btn.submitting {
  background: #ccc;
  box-shadow: none;
}

.submit-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

/* 无法参与提示 */
.cannot-participate {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.tip-icon {
  margin-bottom: 20rpx;
}

.info-icon {
  width: 80rpx;
  height: 80rpx;
}

.tip-content {
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

.auth-btn {
  background: linear-gradient(135deg, #5f1971, #7b2d8e);
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(95, 25, 113, 0.3);
}

.auth-btn::after {
  border: none;
}

/* 结果展示 */
.results-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.toggle-btn {
  background-color: transparent;
  color: #5f1971;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #5f1971;
  border-radius: 20rpx;
}

.toggle-btn::after {
  border: none;
}

.results-list {
  margin-top: 30rpx;
}

.result-item {
  margin-bottom: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.result-stats {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.vote-count {
  font-size: 28rpx;
  color: #5f1971;
  font-weight: 600;
}

.vote-percent {
  font-size: 28rpx;
  color: #666;
}

.progress-container {
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #5f1971, #7b2d8e);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin: 20rpx;
  padding-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #5f1971, #7b2d8e);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(95, 25, 113, 0.3);
}

.action-btn.secondary {
  background-color: #fff;
  color: #5f1971;
  border: 2rpx solid #5f1971;
}

.action-btn::after {
  border: none;
}